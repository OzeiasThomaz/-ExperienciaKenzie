// Calculo de dois preços

let preco1 = 4;
let preco2 = 7;
let total = preco1 + preco2;

alert('Total: '+total);

if (total !== undefined) {
  const mensagem = document.getElementById('mensagem');
  mensagem.classList.remove('hidden');
}

//calculo de dois numeros

let num1 = 9;
let num2 = 7;
let total = num1 + num2;

 alert('A soma de  ' + num1 + ' + ' + num2 + ' = ' + total);

 // retorno de true se o numero1 for maior que o numero2(com alerta na  pagina)
 
 let numero1 = 10;
let numero2 = 5;

let resultado = numero1 > numero2;

alert(resultado);


//Comparaçao:  quando o numero1 for igual ao numero2

let numero1 = 7;
let numero2 = 7;

let resultado = numero1 == numero2;

alert(resultado);


// Escreva um código que imprime o maior  de dois números

let numero1 = 7;
let numero2 = 9;

if (numero1>numero2) {
  alert ('numero 1');
